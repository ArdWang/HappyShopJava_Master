<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <!--左边-->
        <LinearLayout
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mMsgImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/icon_default_user"
                />
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/mMsgTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/mMsgCon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--右边-->
        <LinearLayout
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            >
            <TextView
                android:id="@+id/mMsgTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-3-16 09:18:24"
                />

            <TextView
                android:id="@+id/mMsgRead"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="1"
                android:background="@drawable/txtview_cycle_bg"
                android:textColor="@color/common_white"
                android:textStyle="bold"
                />
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/btnEdit"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@color/common_yellow"
        android:clickable="true"
        android:text="未读"
        android:textColor="@android:color/white"/>
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@color/colorRed"
        android:text="删除"
        android:textColor="@android:color/white"/>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>